<p id="notice"><%= notice %></p>

<h1>Today's Bookings</h1>


<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>Start time</th>
      <th>Finish time</th>
      <th>Description</th>
      <th colspan="5">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.room.room_name %></td>
        <td><%= booking.start_time.strftime("%H:%M") %></td>
        <td><%= booking.finish_time.strftime("%H:%M") %></td>
        <td><%= booking.description %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
    <% @rooms.each do |room| %>
      <h4><%= room.room_name %></h4>
      <ul>
        <% room.bookings.each do |booking| %>
          <li><%= booking.description %></li>
          <li><%= booking.start_time.strftime("%H:%M") %></li>
          <li><%= booking.finish_time.strftime("%H:%M") %></li>
        <% end %>
      </ul>
    <% end %>

<br>

<%= link_to 'New Room', new_room_path %>


<%= link_to 'New Booking', new_booking_path %>
